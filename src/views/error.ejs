<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <%- include("_includes/head") %>

    <title><%= site.name %> - <%= errorNum %></title>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("_includes/sidebar") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("_includes/topbar") %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- 404 Error Text -->
                    <div class="text-center">
                        <div class="error mx-auto" data-text="<%= errorNum %>"><%= errorNum %></div>
                        <p class="lead text-gray-800 mb-5"><%= errorDesc %></p>
                        <p class="text-gray-500 mb-0"><%= errorSlug %></p>
                        <a href="/">&larr; Back to Home</a>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include("_includes/footer") %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include("_includes/doc-end") %>

</body>

</html>